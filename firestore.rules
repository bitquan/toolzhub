rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own QR codes
    match /qrcodes/{qrCodeId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Users can read and write their own analytics data
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null;
      allow create: if true; // Allow anonymous scan tracking
    }
    
    // Public read access to QR code data for scanning (without authentication)
    match /public_qr/{qrCodeId} {
      allow read: if true;
      allow write: if false;
    }
  }
}